<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- 1. HEADER CONTAINER (DIBUNGKUS AGAR BISA TURUN) -->
    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <!-- marginTop="30dp" ini yang menurunkan Judul & Tombol Close -->

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="#000000"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Kuis"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- 2. INDIKATOR TITIK -->
    <LinearLayout
        android:id="@+id/dotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/headerContainer"
        android:layout_marginTop="40dp">
        <!-- layout_below="@id/headerContainer" -> Posisinya di bawah header -->

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#E0E0E0"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button.Small"/>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#000000"
            android:backgroundTint="#000000"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button.Small"/>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#E0E0E0"/>
    </LinearLayout>

    <!-- 3. SCROLL CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dotsIndicator"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="80dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:hint="Masukan Pertanyaan"
                android:background="@drawable/bg_input_flat"
                android:padding="16dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textColorHint="#94A3B8"
                android:gravity="top|start"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etAnswer1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Pilihan Jawaban 1"
                android:background="@drawable/bg_input_flat"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textColorHint="#94A3B8"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jawaban Benar"
                    android:textColor="#000000"/>
                <CheckBox
                    android:id="@+id/cbAnswer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <EditText
                android:id="@+id/etAnswer2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Pilihan Jawaban 2"
                android:background="@drawable/bg_input_flat"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textColorHint="#94A3B8"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jawaban Benar"
                    android:textColor="#000000"/>
                <CheckBox
                    android:id="@+id/cbAnswer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <EditText
                android:id="@+id/etAnswer3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Pilihan Jawaban 3"
                android:background="@drawable/bg_input_flat"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textColorHint="#94A3B8"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jawaban Benar"
                    android:textColor="#000000"/>
                <CheckBox
                    android:id="@+id/cbAnswer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <EditText
                android:id="@+id/etAnswer4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Pilihan Jawaban 4"
                android:background="@drawable/bg_input_flat"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textColorHint="#94A3B8"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jawaban Benar"
                    android:textColor="#000000"/>
                <CheckBox
                    android:id="@+id/cbAnswer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Tombol Tambah Pilihan -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddOption"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Tambah Pilihan Jawaban"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background="@drawable/bg_button_grey"
                app:backgroundTint="@null"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

            <!-- Tombol Simpan -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveQuestion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Simpan Pertanyaan"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background="@drawable/bg_button_blue"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- 4. TOMBOL SELANJUTNYA -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNextStep"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Selanjutnya"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_blue"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>